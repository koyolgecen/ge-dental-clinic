worker_processes 1;
events { worker_connections 1024; }

http {
  include       /etc/nginx/mime.types;
  default_type  application/octet-stream;
  sendfile      on;
  tcp_nopush    on;
  keepalive_timeout 15;

  # Temel gzip (opsiyonel)
  gzip on;
  gzip_comp_level 5;
  gzip_min_length 1024;
  gzip_types text/plain text/css application/javascript application/json image/svg+xml;

  server {
    listen <%= ENV["PORT"] %>;
    server_name _;

    root /app;          # Heroku slug root
    index index.html;

    # Statik dosya / sayfa
    location / {
      try_files $uri $uri/ =404;   # SPA değiliz; 404 ver
    }

    # Asset’lere uzun cache
    location ~* \.(css|js|png|jpg|jpeg|gif|webp|avif|svg|ico|woff2?)$ {
      expires 30d;
      add_header Cache-Control "public, max-age=2592000";
      try_files $uri =404;
    }
  }
}
